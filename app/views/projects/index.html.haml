%h1 Listing projects

%table
  %tr
    %th Name
    %th
    %th
    %th

  - @projects.in_groups_of(2) do |projects|
    %tr{ :class => cycle("odd", "even") }
      %td{ :class => :left }
        = render "project", :project => projects.first
      %td{ :class => :right }
        = render "project", :project => projects.last

%br

= link_to 'New Project', new_project_path
