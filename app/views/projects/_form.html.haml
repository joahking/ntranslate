= simple_form_for(@project, :html => {:class => 'project create'}) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, :wrapper_html => {:class => 'name'}, :hint  => 'Please choose a nice short name for your project'
    = f.input :master_language, :collection => languages_collection(@project.languages_records), :as => :select, :selected => @project.master_language
    = f.input :languages, :collection => languages_collection, :as => :check_boxes, :hint  => 'These are the languages you would like to have your text resources translated to.'

  .form-actions
    = f.button :submit
