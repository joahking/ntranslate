%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Ntranslate"
      %meta{:content => content_for?(:description) ? yield(:description) : "Ntranslate", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body
    .main
      .click.login-wrapper
        .login
          - if signed_in?
            = welcome_user
            |
            = link_to "Sign out", signout_path
          - else
            %a{:href => "/auth/github", :class => "auth_provider"}
              Sign in with Github
              = image_tag "github_32.png", :size => "32x32", :alt => "Github"

      .header-wrapper
        .header
          .logo
            %a{:href => root_url}
              nTranslate

          .search
            %form#form1{:action => "", :method => "post", :name => "form1"}
              %label
                %span
                  %input#textfield.keywords{:maxlength => "50", :name => "q", :type => "text", :value => "Search..."}/
                %input.button{:name => "b", :src => image_path("search.gif"), :type => "image"}/
          .menu
            = render 'layouts/navigation'

      .body
        ajkhd asjd hasjd asjd sakjdh sakjd a
        = render 'layouts/messages'
        = yield
